# Sherlog Canvas Environment Configuration

# API Settings
SHERLOG_DEBUG=true
SHERLOG_API_HOST=0.0.0.0
SHERLOG_API_PORT=8000

# AI Settings
ANTHROPIC_API_KEY=your_api_key_here
SHERLOG_ANTHROPIC_MODEL=claude-3-7-sonnet-20250219

# Logging and Monitoring
LOGFIRE_TOKEN=your_logfire_token_here
SHERLOG_ENV=development

# Storage Settings
SHERLOG_NOTEBOOK_STORAGE_TYPE=file  # Options: file, s3, none
SHERLOG_NOTEBOOK_FILE_STORAGE_DIR=./data/notebooks
SHERLOG_CONNECTION_STORAGE_TYPE=file  # Options: file, env, none
SHERLOG_CONNECTION_FILE_PATH=./data/connections.json

# AWS Settings (Optional - for S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# MCP Server Settings (Optional - for pre-configured connections)
# Example Grafana connection
# SHERLOG_CONNECTION_GRAFANA_MAIN_NAME=My Grafana Server
# SHERLOG_CONNECTION_GRAFANA_MAIN_CONFIG_URL=https://grafana.example.com
# SHERLOG_CONNECTION_GRAFANA_MAIN_CONFIG_API_KEY=your_grafana_api_key
# SHERLOG_CONNECTION_DEFAULT_GRAFANA=main

# Example PostgreSQL connection
# SHERLOG_CONNECTION_POSTGRES_MAIN_NAME=My PostgreSQL Database
# SHERLOG_CONNECTION_POSTGRES_MAIN_CONFIG_CONNECTION_STRING=postgresql://user:password@localhost/dbname
# SHERLOG_CONNECTION_DEFAULT_POSTGRES=main