# Sherlog Canvas Environment Configuration

# API Settings
SHERLOG_DEBUG=true
SHERLOG_API_HOST=0.0.0.0
SHERLOG_API_PORT=8000

# AI Settings
ANTHROPIC_API_KEY=your_api_key_here
SHERLOG_ANTHROPIC_MODEL=claude-3-7-sonnet-20250219

# Storage Settings
SHERLOG_NOTEBOOK_STORAGE_TYPE=file  # Options: file, s3, none
SHERLOG_NOTEBOOK_FILE_STORAGE_DIR=./data/notebooks
SHERLOG_CONNECTION_STORAGE_TYPE=file  # Options: file, env, none
SHERLOG_CONNECTION_FILE_PATH=./data/connections.json

# Qdrant Settings (Vector Database)
SHERLOG_QDRANT_URL=qdrant
SHERLOG_QDRANT_PORT=6333
SHERLOG_QDRANT_API_KEY=  # Optional

# AWS Settings (Optional - for S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Plugin Settings
SHERLOG_DEFAULT_QUERY_TIMEOUT=30  # seconds